{
    // thesis_python workspace settings
    "python.analysis.extraPaths": [
        "${workspaceFolder}/packages/qspectro2d/src",
        "${workspaceFolder}/packages/plotstyle/src",
        "${workspaceFolder}/scripts"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.autoImportCompletions": true,
    // Hide build/temporary files
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints": true,
        "**/*.egg-info": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/build": true,
        "**/dist": true
    }
}